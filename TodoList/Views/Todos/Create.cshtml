@model TodoList.Models.Todo

<div class="container mt-4">
    <h2 class="mb-4 text-center">Add New Item</h2>

    @using (Html.BeginForm())
    {
        <div class="mb-3">
            @Html.LabelFor(m => m.Activity, "Activity", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Activity, new { @class = "form-control", placeholder = "Enter activity" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Price, "Price", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", placeholder = "Enter price" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Type, "Type", new { @class = "form-label" })
            @Html.DropDownListFor(m => m.Type, new SelectList(new[]
                     {
        "Education", "Recreational", "Social", "DIY",
        "Charity", "Cooking", "Relaxation", "Music", "Busywork"
        }), "Select Type", new
        {
            @class = "form-select"
        })
        </div>

        <div class="mb-3 form-check">
            @Html.CheckBoxFor(m => m.BookingRequired, new { @class = "form-check-input" })
            @Html.LabelFor(m => m.BookingRequired, "Booking Required", new { @class = "form-check-label" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Accessibility, "Accessibility", new { @class = "form-label" })
            <input type="range" min="0.0" max="1.0" step="0.1" name="Accessibility" class="form-range" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="@Url.Action("Index", "Todos")" class="btn btn-secondary ms-2">Cancel</a>
    }
</div>

@model List<TodoList.Models.Todo>

<div class="container mt-4">
    <h2 class="mb-4 text-center">To-Do List</h2>
    <p class="fw-bold">Total Items: @(Model?.Count ?? 0)</p>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            No items in the list.
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Activity</th>
                    <th>Price</th>
                    <th>Type</th>
                    <th>Booking Required</th>
                    <th>Accessibility</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Activity</td>
                        <td>@item.Price</td>
                        <td>@item.Type</td>
                        <td>@(item.BookingRequired ? "Yes" : "No")</td>
                        <td>@item.Accessibility</td>
                        <td>
                            <a href="@Url.Action("Delete", "Todos", new { id = item.TodoId })" class="btn btn-danger btn-sm">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="text-center mt-4">
        <a href="@Url.Action("Create", "Todos")" class="btn btn-primary btn-lg">
            Add New Item
        </a>
    </div>
</div>
